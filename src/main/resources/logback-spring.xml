<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
	<springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="lottery"/>
	<!-- <include resource="org/springframework/boot/logging/logback/base.xml"/>  -->

 	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>${APP_NAME} : [%date{yyyy-MM-dd HH:mm:ss}] [%-5level]
				[%logger:%line]--%mdc{client} %msg%n</Pattern>
        </layout>
    </appender>
    
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>app/logs/${APP_NAME}/${APP_NAME}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/app/logs/${APP_NAME}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log
			</FileNamePattern>
			<MaxHistory>30</MaxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<Pattern>${APP_NAME} : [%date{yyyy-MM-dd HH:mm:ss}] [%-5level]
				[%logger:%line]--%mdc{client} %msg%n</Pattern>
		</encoder>
	</appender>


    
	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
	<jmxConfigurator/>
</configuration>  